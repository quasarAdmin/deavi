<?xml version="1.0"?>
<sfm>
  <global>
    <container>deavi</container>
    <version>0.0.8</version>
    <!-- PATHS -->
    <!-- The resources_path will be set from gavip/django configuration -->
    <!-- <resources_path>/data/output/</resources_path> -->
    <sources_path>sources</sources_path>
    <gaia_path>gaia</gaia_path>
    <hsa_path>hsa</hsa_path>
    <results_path>results</results_path>
    <user_path>user</user_path>
    <tmp_path>tmp</tmp_path>
    <uploaded_alg_path>alg</uploaded_alg_path>
    <tmp_alg_path>tmp_alg</tmp_alg_path>
    <!-- FORMATS -->
    <sources_fmt>%(mission)s_%(date)s_%(name)s</sources_fmt>
    <results_fmt>%(task)s_%(date)s_%(name)s</results_fmt>
    <user_fmt>%(user)s_%(date)s_%(name)s</user_fmt>
  </global>
  <!-- FRONTEND -->
  <frontend>
    <max_alg_per_page>10</max_alg_per_page>
    <max_exec_per_page>10</max_exec_per_page>
  </frontend>
</sfm>
