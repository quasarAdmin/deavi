<?xml version="1.0"?>
<log>
  <config>
    <format>%(asctime)s - %(name)s - %(levelname)s - %(message)s</format>
    <file_config to_file="true" rotation="true" console="false">
      <!-- <file_format>logs/risea.log</file_format> -->
      <file_format>/data/logs/risea.log</file_format>
      <backup_count>100</backup_count>
      <max_bytes>1000000</max_bytes>
    </file_config>
    <default_level>critical</default_level>
  </config>
  <level>
    <risea>debug</risea>
    <sfm>debug</sfm>
    <herschel>info</herschel>
    <connection>info</connection>
    <gaia>info</gaia>
    <archive_interface>info</archive_interface>
    <samp>debug</samp>
    <configuration_manager>info</configuration_manager>
    <votable_parser>debug</votable_parser>
    <fits_manager>debug</fits_manager>
    <esasky>debug</esasky>
    <plotting>info</plotting>
    <votable_reader>info</votable_reader>
    <resources_manager>info</resources_manager>
    <plotter>debug</plotter>
    <!-- WAREHOUSES -->
    <wh_global_config>debug</wh_global_config>
    <!-- MANAGERS -->
    <interface_manager>info</interface_manager>
    <pipeline_manager>debug</pipeline_manager>
    <algorithm_manager>debug</algorithm_manager>
    <file_manager>debug</file_manager>
    <!-- JOBS -->
    <get_queries_status>debug</get_queries_status>
    <get_pipeline_status>debug</get_pipeline_status>
    <!-- TASKS -->
    <task>info</task>
    <algorithm_task>info</algorithm_task>
    <gaia_query_task>debug</gaia_query_task>
    <herschel_query_task>info</herschel_query_task>
    <!-- DJANGO -->
    <views>debug</views>
    <query_gaia>debug</query_gaia>
    <query_gaia_form>debug</query_gaia_form>
    <!-- Qt -->
    <deavi_qtapplication>debug</deavi_qtapplication>
  </level>
</log>
